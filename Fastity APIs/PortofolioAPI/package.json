{
    "name": "api",
    "version": "0.0.1",
    "scripts": {
        "_onBuildSuccess": "tsc-alias && npm run start:prd",
        "build": "tsc && tsc-alias",
        "build:watch": "tsc-watch --noClear --onSuccess \"npm run _onBuildSuccess\"",
        "start:prd": "fastify start --require=dist/shared/config.js dist/server.js",
        "start:dev": "npm run build && npm run build:watch"
    },
    "dependencies": {
        "@fastify/autoload": "^5.7.1",
        "@fastify/cors": "^8.3.0",
        "@fastify/jwt": "^7.2.1",
        "@fastify/rate-limit": "^8.0.3",
        "@fastify/sensible": "^5.2.0",
        "@fastify/static": "^6.11.0",
        "@fastify/swagger": "^8.9.0",
        "@fastify/swagger-ui": "^1.9.3",
        "@types/nodemailer": "^6.4.9",
        "bson": "^6.0.0",
        "concurrently": "^8.2.2",
        "cron": "^3.1.6",
        "dotenv": "^16.3.1",
        "fastify": "^4.28.0",
        "fastify-cli": "^5.8.0",
        "fastify-plugin": "^4.5.1",
        "fastify-type-provider-zod": "^1.1.9",
        "js-sha256": "^0.10.1",
        "mongoose": "^7.5.0",
        "nodemailer": "^6.9.4",
        "puppeteer": "^21.10.0",
        "rxjs": "^6.5.5",
        "winston": "^3.11.0",
        "winston-loki": "^6.0.8",
        "yargs": "^16.1.0",
        "zod": "^3.22.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^17.7.0",
        "@types/jest": "^29.5.4",
        "@types/node": "^18.0.0",
        "@types/uuid": "^9.0.3",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "@typescript-eslint/parser": "^6.6.0",
        "eslint": "^8.48.0",
        "eslint-import-resolver-typescript": "^3.6.0",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-sonarjs": "^0.21.0",
        "eslint-plugin-unicorn": "^48.0.1",
        "fastify-tsconfig": "^1.0.1",
        "husky": "^8.0.3",
        "jest": "^29.6.4",
        "standard-version": "^9.5.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.7",
        "tsc-watch": "^6.0.4",
        "typed-emitter": "^2.1.0",
        "typescript": "^5.4.5"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "engines": {
        "npm": ">=9.0.0",
        "node": ">=18.0.0"
    }
}
